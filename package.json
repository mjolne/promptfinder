{
  "name": "promptfinder",
  "version": "1.0.0",
  "description": "A community-powered tool for managing and sharing AI prompts",
  "private": true,
  "scripts": {
    "lint": "eslint app.js js/**/*.js pages/**/*.js",
    "lint:fix": "eslint --fix app.js js/**/*.js pages/**/*.js",
    "format": "prettier --write \"**/*.{js,html,css,md,json}\"",
    "test": "jest",
    "build": "npm run lint && npm run format && npm run css:minify && echo \"Build completed successfully\"",
    "clean-install": "rm -rf node_modules package-lock.json && npm install",
    "css:minify": "bash ./scripts/minify-css.sh",
    "css:improve": "bash ./scripts/improve-css-quality.sh",
    "css:analyze": "bash ./scripts/find-unused-css.sh",
    "css:switch": "bash ./scripts/switch-css-env.sh",
    "build:prod": "npm run lint && npm run format && npm run css:improve && npm run css:minify && echo \"Production build completed\""
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "purgecss": "^7.0.2"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "author": "",
  "license": "MIT",
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFiles": [
      "./tests/setupTests.js"
    ]
  }
}
