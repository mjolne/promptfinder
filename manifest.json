{
  "manifest_version": 3,
  "name": "PromptFinder",
  "version": "1.0",
  "description": "A community-powered tool for managing and sharing AI prompts.",
  "action": {
    "default_popup": "pages/popup.html"
  },
  "permissions": ["storage", "clipboardWrite", "windows"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; script-src-elem 'self' https://www.gstatic.com https://*.firebaseio.com; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
