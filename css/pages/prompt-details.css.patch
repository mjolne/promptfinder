/* Add specific rule to hide prompt edit actions in normal prompt details view */
#prompt-details-section:not(.editing) #prompt-edit-actions-bar {
  display: none !important;
}

/* Hide button containers when not in edit mode */
#prompt-details-section:not(.editing) #edit-prompt-buttons,
#prompt-details-section:not(.editing) #add-prompt-buttons {
  display: none !important;
}
